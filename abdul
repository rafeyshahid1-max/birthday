<script>
// Typing effect
const text = "My Love, My Areeba üíó";
let i=0;
function type(){
    if(i<text.length){
        document.getElementById("typing").innerHTML+=text.charAt(i);
        i++;
        setTimeout(type,120);
    }
}
type();

// Balloons & hearts
const colors=['#ff3366','#ff6699','#ffcc99','#33ccff','#9933ff'];
for(let i=0;i<25;i++){
    let b=document.createElement("div");
    b.className="balloon";
    b.style.background=colors[Math.floor(Math.random()*colors.length)];
    b.style.left=Math.random()*100+"vw";
    b.style.width=30+Math.random()*30+"px";
    b.style.height=50+Math.random()*50+"px";
    b.style.animationDuration=(7+Math.random()*5)+"s";
    b.style.animationDelay=(Math.random()*5)+"s";
    document.body.appendChild(b);

    // Pop balloon on click
    b.addEventListener('click', ()=>{
        b.style.animation='pop 0.5s forwards';
        createConfettiAt(parseInt(b.style.left), window.innerHeight - 100);
        setTimeout(()=>b.remove(),500);
    });
}

// Floating hearts randomly
setInterval(()=>{
    let h=document.createElement("div");
    h.className="heart";
    h.innerHTML="üíó";
    h.style.left=Math.random()*100+"vw";
    h.style.top=Math.random()*100+"vh";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),2500);
},1000);

// Click hearts
document.addEventListener("click",e=>{
    let h=document.createElement("div");
    h.className="heart";
    h.innerHTML="üíó";
    h.style.left=e.pageX+"px";
    h.style.top=e.pageY+"px";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),1500);
});

// Music & gift opening
const music = document.getElementById("music");
const openBtn = document.getElementById("openBtn");

openBtn.addEventListener("click", () => {
    document.getElementById("message").style.display = "block";

    // Play music
    music.play().catch(()=>setTimeout(()=>music.play(),100));

    // Full screen confetti
    fullConfetti();
    showPopup();
});

// Confetti
function createConfettiAt(x,y){
    for(let i=0;i<15;i++){
        let c=document.createElement("div");
        c.className="confetti";
        c.style.background=colors[Math.floor(Math.random()*colors.length)];
        c.style.left=(x + Math.random()*50 - 25)+"px";
        c.style.top=y+"px";
        c.style.width=5+Math.random()*8+"px";
        c.style.height=5+Math.random()*8+"px";
        c.style.animationDuration=1+Math.random()*1+"s";
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),2000);
    }
}

function fullConfetti(){
    for(let i=0;i<50;i++){
        let c=document.createElement("div");
        c.className="confetti";
        c.style.background=colors[Math.floor(Math.random()*colors.length)];
        c.style.left=Math.random()*100+"vw";
        c.style.top=Math.random()*50+"px";
        c.style.width=5+Math.random()*8+"px";
        c.style.height=5+Math.random()*8+"px";
        c.style.animationDuration=2+Math.random()*1+"s";
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),3000);
    }
}

// Popup
function showPopup(){
    const pop=document.getElementById("popup");
    pop.style.display="block";
    setTimeout(()=>{ pop.style.display="none"; },3500);
}
</script>
